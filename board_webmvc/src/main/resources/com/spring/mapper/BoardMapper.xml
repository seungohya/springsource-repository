<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mapper.BoardMapper">

	<!--전체조회 -->
	<!-- <select id="getList" resultType="com.spring.domain.BoardDTO"> -->
	<!-- select bno,title,writer,regdate,updatedate from spring_board order 
		by bno desc, regdate desc -->
	<!-- </select> -->

	<select id="getList" resultType="com.spring.domain.BoardDTO">
    <![CDATA[
    select bno, title, writer, regdate, updatedate
    from (
        select/*+INDEX_DESC(spring_board pk_spring_board)*/ rownum rn, bno, title, writer, regdate, updatedate
        from spring_board
        where ]]>
        <include refid="criteria"></include>
     <![CDATA[     rownum <= (#{page} * #{amount})
    )
    where rn > (#{page}-1) * #{amount}
    ]]>
	</select>

	<select id="totalCnt" resultType="java.lang.Integer">
		select count(*) from spring_board
		where  <include refid="criteria"></include>
		bno > 0
	</select>


	<!-- 동적 쿼리 -->
	<sql id="criteria">
		<trim prefix="(" suffix=") AND" prefixOverrides="OR">
			<foreach collection="typeArr" item="type">
				<trim prefix="OR">
					<choose>
						<when test="type == 'T'.toString()">
							title like '%'|| #{keyword}||'%'
						</when>
						<when test="type == 'C'.toString()">
							content like '%'|| #{keyword}||'%'
						</when>
						<when test="type == 'W'.toString()">
							writer like '%'|| #{keyword}||'%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>


	<!-- 글 등록 -->
	<insert id="register">
		<!-- 주로 pk 값을 미리 SQL 을 통해서 처리해 두고 특정한 이름으로 결과를 보관 -->
		<selectKey keyProperty="bno" order="BEFORE" resultType="int">
			select seq_board.nextval from dual
		</selectKey>
		insert into spring_board (bno, title, writer, content, regdate,
		updatedate)
		values (#{bno}, #{title}, #{writer}, #{content}, sysdate,
		sysdate)
	</insert>

	<!-- 글 상세 조회 -->
	<select id="read" resultType="com.spring.domain.BoardDTO">
		select * from spring_board where
		bno = #{bno}
	</select>
	<!-- 글수정 bno 일치시 title 과 content , updatedate -->
	<update id="modify">
		update spring_board set title =
		#{title},content=#{content},updatedate=sysdate where bno = #{bno}
	</update>
	<!-- 글 삭제 -->
	<delete id="remove">
		delete from spring_board where bno = #{bno}
	</delete>
</mapper>